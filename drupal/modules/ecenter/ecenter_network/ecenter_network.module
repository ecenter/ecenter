        $lon = $features[$k]['extra']['coords']['lon'] + .15;
        $features[$k]['wkt'] = "POINT({$lon} {$lat})";
        break;
      case 'JGI':
        $features[$k]['style']['labelXOffset'] = 5;
        $features[$k]['style']['labelYOffset'] = 15;
        $lat = $features[$k]['extra']['coords']['lat'] + .7;
        $lon = $features[$k]['extra']['coords']['lon'] + .1;
