      '#value' => theme('jqplot_table', $circuit_headers, $circuit_rows,
        array('class' => 'data-table')),
    );
  }

  return $form;
}

/**
 * Helper to get recent site centric results
 * 
 * @param $start_offset
 *   An offset (relative to now) to query for, expressed in seconds.
 * @param $duration
 *   A timespan to query for, expressed in seconds. 
 */
function ecenter_network_get_recent_scv_results($src, $start_offset = 0, $duration = 3600) {
  module_load_include('inc', 'date_api', 'date_api_elements');
  $now = time() - $start_offset;
  $inc = 60;
  $tz = timezone_open('UTC');
  $end = date_make_date($now, $tz, DATE_UNIX);
  $start = date_make_date($now - $duration, $tz, DATE_UNIX);
  date_increment_round($start, $inc);
  date_increment_round($end, $inc);
  $start = date_format($start, 'Y-m-d H:i:00');
  $end = date_format($end, 'Y-m-d H:i:00');
  return array(
    'start' => $start,
    'end' => $end,
    'data' => ecenter_network_get_site_centric_data($src, $start, $end),
  );
}

