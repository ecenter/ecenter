/**
 * Implementation of hook_uuid_node_features_rebuild_alter().
 */
function ecenter_dashboard_uuid_node_features_rebuild_alter(&$node, $module) {
  if ($node->type == 'snippet' && $module == 'ecenter_dashboard') {
    $flag = flag_get_flag('ecenter_dashboard_carousel');
    $flag->flag('flag', $node->nid);
  }
}

/**
 * Implementation of hook_cron().
 */
function ecenter_dashboard_cron() {
  module_load_include('inc', 'date_api', 'date_api_elements');
  $now = time();
  $offset = 3600 * 3;
  $inc = 60;
  $tz = timezone_open('UTC');
  $end = date_make_date($now, $tz, DATE_UNIX);
  $start = date_make_date($now - $offset, $tz, DATE_UNIX);
  date_increment_round($start, $inc);
  date_increment_round($end, $inc);
  $start = date_format($start, 'Y-m-d H:i:00');
  $end = date_format($end, 'Y-m-d H:i:00');

  $hubs = ecenter_network_get_hops();
  foreach ($hubs['hubs'] as $key => $hop) {
    if ($key != 'PPPL' && $key != 'SNLL' && $key != 'LLNL') {
      $data = ecenter_network_get_site_centric_data($key, $start, $end);
    }
  }
}
