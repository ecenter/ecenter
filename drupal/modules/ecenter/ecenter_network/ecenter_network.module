/**
 * Primary selection form.
 *
 * The basic form is defined in _ecenter_network_select_form. This function
 * primarily processes the form.
 */
function ecenter_network_select_form(&$form_state) {
  global $user;

  // Bail if the service is down
  ecenter_network_get_client('503');
  
  // Get base form and register with ahah_helper
  $form = _ecenter_network_select_form();
  ahah_helper_register($form, $form_state);

  extract(_ecenter_network_extract_query());

  // Refresh map
  ecenter_network_refresh_map('ecenter_network', 'openlayers-map-auto-id-0');

  // Set dates
  if (!empty($start)) {
    $form['network_wrapper']['query']['start']['#default_value'] = 
      _ecenter_network_utc_to_local($start);
  }
  if (!empty($end)) {
    $form['network_wrapper']['query']['end']['#default_value'] = 
      _ecenter_network_utc_to_local($end);
  }

  if (empty($timezone)) {
    $timezone = $user->timezone_name ? $user->timezone_name 
      : variable_get('date_default_timezone_name', NULL);
  }
  
  $sources = ecenter_network_get_hops();

  $src_options[0] = '';

  if (!empty($sources)) {
    foreach ($sources['hubs'] as $key => $hop) {
      $src_options['hub:'. $key] = theme('ecenter_network_hop_option', $hop);
    }
    $form['network_wrapper']['query']['src_wrapper']['src']['#options'] += $src_options;
    if (!empty($src)) {
      $form['network_wrapper']['query']['src_wrapper']['src']['#default_value'] = $src;
      list($src_type, $src_value) = explode(':', $src, 2);
      $destinations = ecenter_network_get_hops($src_value, $src_type);
      $dst_options[0] = '';
      foreach ($destinations['hubs'] as $key => $hop) {
        if ($src_value != $key) {
          $dst_options['hub:'. $key] = theme('ecenter_network_hop_option', $hop);
        }
      }
      $form['network_wrapper']['query']['dst_wrapper']['dst']['#options'] += $dst_options;
      $form['network_wrapper']['query']['dst_wrapper']['dst']['#disabled'] = FALSE;
    }

    if (!empty($dst)) {
      list($dst_type, $dst_value) = explode(':', $dst, 2);
      $form['network_wrapper']['query']['dst_wrapper']['dst']['#default_value'] = $dst;
    }
  }

  if (!empty($start) && !empty($end)) {

    $data['parameters'] = array(
      'start' => $start,
      'end' => $end,
    );
    
    $form['results_wrapper']['results']['query_tools'] = array(
      '#prefix' => '<div id="query-tools-wrapper" class="clearfix">',
      '#suffix' => '</div>',
      '#weight' => 5,
    );

    $form['results_wrapper']['results']['query_tools']['circuit_links'] = array(
      '#prefix' => '<div id="circuit-links-wrapper">',
      '#suffix' => '</div>',
      '#weight' => 0,
    );

    if (!empty($traceroute)) {
      $data = array(
        'drs' => ecenter_network_get_traceroute_data($traceroute, $start, $end)
      );
      $data['parameters'] = $data['drs']['parameters'];
    }
    elseif (!empty($src) && !empty($dst)) {
      $data['parameters'] += array(
        'src' => $src,
        'dst' => $dst,
      );

      switch ($mode) {
        case 'circuit':
          $circuits = ecenter_network_get_circuit_data($src, $dst, $start, $end);
          if (!empty($circuits['circuits'])) {
            // Build link back to IP results
            $form['results_wrapper']['results']['query_tools']['circuit_links']['#value'] = 
              '<p>'. l('&laquo; Back to IP results', 'network', array('html' => TRUE, 'query' => $data['parameters'])) .'</p>';

            if (!$circuit || empty($circuits['circuits'][$dst_value][$circuit])) {
              $circuit = array_shift(array_keys($circuits[$dst_value]['circuits']));
            }
            $circuit_data = $circuits['circuits'][$dst_value][$circuit];
            $data += array(
              'drs' => $circuit_data,
            );
            $data['parameters'] += array(
              'circuit' => $circuit,
              'mode' => 'circuit',
            );
          }
          break;
        default:
          $data += array(
            'drs' => ecenter_network_get_data($src, $dst, $start, $end)
          );
          break;
      }
    }      

    $form['results_wrapper']['results']['query_settings'] = array(
      '#weight' => 5,
    );

    // Render if data present
    if ($data['drs']) {

      $link_params = array(
        'src' => $data['parameters']['src'],
        'dst' => $data['parameters']['dst'],
        'start' => $data['parameters']['start'],
        'end' => $data['parameters']['end'],
      );
      $permalink = shorturl_shorten(url('network', array('query' => $link_params, 'absolute' => TRUE)), TRUE);

      $data['parameters']['timezone'] = $timezone;
     
      if ($mode != 'circuit') {
        $circuit_data = ecenter_network_get_circuit_data($data['parameters']['src'], $data['parameters']['dst'], $data['parameters']['start'], $data['parameters']['end'], TRUE);
        if (!empty($circuit_data['circuits'])) {
          $circuit_links = array(); 
          foreach ($circuit_data['circuits'][$dst_value] as $circuit_name => $circuit) {
            $link_params = $data['parameters'] + array(
              'mode' => 'circuit',
              'circuit' => $circuit_name,
            );
            $circuit_links[] = l($circuit_name, 'network', array('query' => $link_params, 'absolute' => TRUE));

            // Build links...
            $form['results_wrapper']['results']['query_tools']['circuit_links']['#value'] = '<p>'. t('Circuits detected: '). implode(', ', $circuit_links) .'.</p>';
          }
        }
      }
      
      $data['parameters'] += array(
        'fds' => 0,
        'ads' => 0,
      );

      if ($ads) {
        $data['ads'] = ecenter_network_get_ads_data($data['parameters']['src'], $data['parameters']['dst'], $data['parameters']['start'], $data['parameters']['end'],
          $algorithm, $detector_type, $sensitivity, $elevation1, $elevation2, $swc);
        $data['parameters']['ads'] = 1;
      }

      if ($fds) {
        $data['fds'] = ecenter_network_get_fds_data($data['parameters']['src'], $data['parameters']['dst'], $data['parameters']['start'], $data['parameters']['end'], $fds_type);
        $data['parameters']['fds'] = 1;
        $data['parameters']['fds_type'] = $fds_type;
      }

      // Call helper function to create messages
      $form['results_wrapper']['results']['ecenter_messages'] = array(
        '#prefix' => '<div id="ecenter-messages-wrapper">',
        '#suffix' => '</div>',
        '#weight' => 7, 
        '#value' => theme('ecenter_network_messages', $data, $data['parameters']),
      );

      // Build timezone selector
      $timezones = array_map('_ecenter_network_process_tz_name', date_timezone_names());
      $timezone_select = array(
        '#type' => 'combobox',
        '#title' => t('Timezone'),
        '#value' => $timezone,
        '#options' => $timezones,
        '#id' => 'timezone-select',
        '#name' => 'timezone',
      );

      $title = theme('ecenter_network_query_title', $data['parameters']);
      drupal_set_title(strip_tags($title));

      $form['results_wrapper']['results']['title_bar'] = array(
        '#weight' => 0,
        '#prefix' => '<div id="title-bar-wrapper" class="clearfix">',
        '#suffix' => '</div>',
        'title' => array(
          '#prefix' => '<div id="title-wrapper">',
          '#suffix' => '</div>',
          '#value' => $title,
        ),
        'permalink' => array(
          '#prefix' => '<div id="permalink-wrapper">',
          '#suffix' => '</div>',
          array(
            '#type' => 'textfield',
            '#size' => 25,
            '#value' => $permalink,
          ),
          array(
            '#value' => t('<a class="button" href="@url">Link</a>', array('@url' => $permalink)),
          ),
        ),
        $timezone_select,
      );        

      if ($mode != 'circuit') {
        $form['results_wrapper']['results']['query_tools']['analysis'] = array(
          '#prefix' => '<div id="analysis-wrapper">',
          '#suffix' => '</div>',
          '#weight' => 5,
        );

        $form['results_wrapper']['results']['query_tools']['analysis']['ads'] = ecenter_network_ads_form($query_params['ads']);

        $has_bwctl = (!empty($data['drs']['end_to_end']['bwctl']['forward']) ||
          !empty($data['drs']['end_to_end']['bwctl']['reverse']));

        $has_snmp = (!empty($data['drs']['traceroute']['forward']) ||
          !empty($data['drs']['traceroute']['reverse']));

        $has_owamp = (!empty($data['drs']['end_to_end']['owamp']['forward']) ||
          !empty($data['drs']['end_to_end']['owamp']['reverse']));

        $form['results_wrapper']['results']['query_tools']['analysis']['fds'] = 
          ecenter_network_fds_form($query_params['fds'], $has_snmp, $has_bwctl, $has_owamp);
      }

      // Render data
      $form['results_wrapper']['results']['result_data'] = array(
        '#weight' => 10,
        '#value' => theme('ecenter_network_data', $data),
      );

      // Render recent queries
      $form['results_wrapper']['results']['recent'] = array(
        '#weight' => 15,
        '#value' => theme('ecenter_network_recent_queries', TRUE),
      );
    }
  }
  else {
    $form['results_wrapper']['#value'] = theme('ecenter_network_recent_queries');
  }
  return $form;
}

/**
 * Default submit handler for network form
 */
function ecenter_network_select_form_submit($form, &$form_state) {
  global $user;

  // Do what AHAH helper does on an AJAX call, to make form constructor a
  // little less crazy
  $inc = variable_get('ecenter_network_time_increment', 30);

  if (empty($form_state['post']['timezone'])) {
    $tz = $user->timezone_name ? $user->timezone_name 
      : variable_get('date_default_timezone_name', NULL);
  }
  else {
    $tz = $form_state['post']['timezone'];
  }

  if ($form_state['values']['network_wrapper']['query']['recent_select']
    && !$form_state['values']['network_wrapper']['query']['date_select']) {

    $date = $form_state['values']['build_time'];
    $offset = 3600 * $form_state['values']['network_wrapper']['query']['recent_select'];
    $end = date_make_date($date, 'UTC', DATE_UNIX);
    $start = date_make_date($date - $offset, 'UTC', DATE_UNIX);

    date_increment_round($start, $inc);
    date_increment_round($end, $inc);

    $start = date_format($start, 'Y-m-d H:i:00');
    $end = date_format($end, 'Y-m-d H:i:00');
  }
  else if ($form_state['values']['network_wrapper']['query']['date_select']) {
    $date = $form_state['values']['network_wrapper']['query']['date_select'];
    $day = date_make_date($date, $tz);
    date_timezone_set($day, timezone_open('UTC'));

    $start = date_format($day, 'Y-m-d H:i:00');
    $end_date = date_modify($day, '+24 hours');
    $end = date_format($day, 'Y-m-d H:i:00');
  }

  // Overwrite post variables
  if (isset($start) && isset($end)) {
    $form_state['values']['network_wrapper']['query']['start'] = $start;
    $form_state['values']['network_wrapper']['query']['end'] = $end;

    // @TODO Set request variables -- seems hackish at this point
    $_REQUEST['network_wrapper']['query']['start'] = $start;
    $_REQUEST['network_wrapper']['query']['end'] = $end;
  }

  $form_state['storage'] = $form_state['values'];
  $form_state['rebuild'] = TRUE;
}

