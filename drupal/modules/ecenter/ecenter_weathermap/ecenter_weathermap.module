    ),
  );

  if ($src && $dst && $start && $end) {

    $data = ecenter_weathermap_get_data($src, $dst, $start, $end);

    if ($data && $traceroute = $data['forward']) {

      // Initialize some counters, etc
      $old_hop = NULL;
      $count = count($traceroute);
      $i = 0;

      $features = array();
      foreach ($traceroute as $hop_data) {
        $hop = $hop_data['hop'];
        if ($hop['longitude'] && $hop['latitude']) {
          $features[] = array(
            'wkt' => "POINT({$hop['longitude']} {$hop['latitude']})",
            'projection' => "4326",
            'style' => array(
              'pointRadius' => 6,
              'fillColor' => '#ffffff',
              'strokeColor' => '#0000aa',
              'strokeWidth' => 3,
              'fillOpacity' => 1,
              'label' => $hop['hub'],
