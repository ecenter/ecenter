        $features[$k]['style']['labelXOffset'] = 4;
        $lat = $features[$k]['extra']['coords']['lat'] - 0.4;
        $lon = $features[$k]['extra']['coords']['lon'];
        $features[$k]['wkt'] = "POINT({$lon} {$lat})";
        break;
