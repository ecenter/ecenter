/**
 * Get the E-Center weather map client
 *
 * @param $status_check
 *  '503', 'message', or FALSE.  What to do if status_check fails.
 */
function ecenter_weathermap_get_client($status_check = '503') {
  static $client = False;
  if (!$client) {
    require_once(dirname(__FILE__) . '/client.php');
    $host = variable_get('ecenter_weathermap_host', 'localhost');
    $port = variable_get('ecenter_weathermap_port', 8000);
    $dir = variable_get('ecenter_weathermap_basedir', '');
    $timeout = variable_get('ecenter_weathermap_timeout', 30);
    $status_timeout = variable_get('ecenter_weathermap_status_timeout', 2);
    $client = new Ecenter_Data_Service_Client($host, $port, $dir, $timeout, $status_timeout);
  }

  // Check status
  if ($status_check && !$client->checkStatus()) {
    $message = t('E-Center web service is not available.');
    watchdog('ecenter', $message, array(), WATCHDOG_ERROR);

    if ($status_check == '503') {
      drupal_set_header('HTTP/1.1 503 Service unavailable');
      // Keep old path for reference, and to allow forms to redirect to it.
      if (!isset($_REQUEST['destination'])) {
        $_REQUEST['destination'] = $_GET['q'];
      }
      print theme('page', $message);
      exit();
    }
    else {
      drupal_set_message($message);
    }
  }
  return $client;
}

/**
 * Get/cache data
 *
 * @param $src_ip
 *   Source IP address
 * @param $dst_ip
 *   Destination IP address
 * @param $start
 *   Start time
 * @param $end
 *   End time
 * @return
 *   An array of parsed data
 */
function ecenter_weathermap_get_data($src_ip, $dst_ip, $start, $end) {
  $query = http_build_query(array(
    'src_ip' => $src_ip,
    'dst_ip' => $dst_ip,
    'start' => $start,
    'end' => $end,
  ));

  $caching = variable_get('ecenter_weathermap_cache_enabled', 0);

  if ($caching && $result = cache_get($query, 'cache_ecenter_weathermap')) {
    return $result->data;
  }
  else {
    $client = ecenter_weathermap_get_client('message');
    $result = $client->getData($src_ip, $dst_ip, $start, $end);
    if ($result['code'] == 200) {
      $data = ecenter_weathermap_parse_response($result, $src_ip, $dst_ip);
      if ($caching) {
        $expires = time() + variable_get('ecenter_weathermap_cache_ttl', 300);
        cache_set($query, $data, 'cache_ecenter_weathermap', $expires);
      }
      return $data;
    }
    else {
      drupal_set_message(t('Request failed with code @code.', array('@code' => $result['code'])));
    }
  }
  return FALSE;
}

/**
 * Get hops
 */
function ecenter_weathermap_get_hops($src_ip = FALSE) {
  $client = ecenter_weathermap_get_client();
  $result = $client->getHubs($src_ip);
  return $result['response'];
}

/**
 * Sanitize the get array
 */
function ecenter_weathermap_sanitize_get() {
  if (!function_exists('filter_input')) {
    return $_GET;
  }
  $get = array();
  foreach (array_keys($_GET) as $key) {
    $get[$key] = filter_input(INPUT_GET, $key, FILTER_SANITIZE_STRING);
  }
  return $get;
}

/**
 * Traverse an object, turning all members into arrays or preserving their
 * values.
 */
function _ecenter_weathermap_object_to_array($obj) {
  if (is_object($obj)) {
    $obj = get_object_vars($obj);
  }
  foreach ($obj as $k => $v) {
    if (is_object($v) || is_array($v)) {
      $obj[$k] = _ecenter_weathermap_object_to_array($v);
    }
    else {
      $obj[$k] = $v;
    }
  }
  return $obj;
}

/**
 * Return allowed data types
 */
function _ecenter_weathermap_get_data_types() {
  return array('snmp', 'pinger', 'owamp', 'bwctl');
}

/**
 * Parse data
 *
 * Parse and prep response from E-Center network data webservice:
 *  - Build an array with forward and reverse traceroutes, their hops, and associated data
 *  - Geolocate IP addresses without geodata
 *  - @TODO Calculate netblock based on mask
 *
 * @param $response
 *   A response object from the E-center webservice.
 */
function ecenter_weathermap_parse_response($response, $src_ip, $dst_ip) {
  static $queries = array();

  if (empty($queries[$response->query])) {
    $data = _ecenter_weathermap_object_to_array($response['response']);

    foreach (array('traceroute', 'reverse_traceroute') as $direction) {
      // We may not have reverse traceroutes
      if (empty($data[$direction])) {
        continue;
      }

      // Pull out traceroutes and sort: we use them to stitch together our
      // data structure
      $traceroutes = $data[$direction];
      krsort($traceroutes);

      // Loop over each traceroute
      $parsed = array();

      foreach ($traceroutes as $trace_id => $traceroute) {

        $parsed[$trace_id] = array();

        // Add src ip to forward trace
        if ($direction == 'traceroute') {
          array_unshift($traceroute, array(
            'hop_id' => 'start',
            'hop_ip' => $src_ip,
          ));
        }
        elseif ($direction == 'reverse_traceroute') {
          array_unshift($traceroute, array(
            'hop_id' => 'end',
            'hop_ip' => $dst_ip,
          ));
        }

        foreach ($traceroute as $hop) {
          $hop_data = array();

          // Geolocate IP if no geo data available
          if (!$hop['longitude'] || !$hop['latitude']) {
            $geo = geoip_city($hop['hop_ip']);
            $hop['longitude'] = $geo->longitude;
            $hop['latitude'] = $geo->latitude;
            $hop['geolocated'] = TRUE;
          }
  
          // SNMP
          $hop_data['snmp'] = $data['snmp'][$hop['hop_id']];

          // Calculate netblock
          $mask = (!empty($hop['netmask'])) ? $hop['netmask'] : 24;
          $hop['netblock'] = long2ip(ip2long($hop['hop_ip']) & ~((1 << (32 - $mask)) - 1));

          $parsed[$trace_id][] = array(
            'hop' => $hop,
            'data' => $hop_data,
          );
        }
      }
      $direction_label = ($direction == 'reverse_traceroute') ? 'reverse' : 'forward';
      $queries[$response->query][$direction_label] = $parsed;
    }

    // End to end
    $src_netblock = long2ip(ip2long($src_ip) & ~((1 << 8) - 1));
    $dst_netblock = long2ip(ip2long($dst_ip) & ~((1 << 8) - 1));
    $end_to_end = array();
    foreach (array('bwctl', 'owamp', 'pinger') as $type) {
      if (!is_array($data[$type])) {
        continue;
      }
      foreach ($data[$type] as $test_ip => $destinations) {
        $test_netblock = long2ip(ip2long($test_ip) & ~((1 << 8) - 1));
        if ($test_netblock == $src_netblock) {
          $end_to_end['forward'][$type] = $destinations;
        }
        if ($test_netblock == $dst_netblock) {
          $end_to_end['reverse'][$type] = $destinations;
        }
      }
    }
    $queries[$response->query]['end_to_end'] = $end_to_end;

    // Calculate diff
    if (!empty($queries[$response->query]['forward']) && !empty($queries[$response->query]['reverse'])) {
      $forward = array_shift(array_values($queries[$response->query]['forward']));
      $reverse = array_reverse(array_shift(array_values($queries[$response->query]['reverse'])));
      $queries[$response->query]['diff'] = traceroute_diff($forward, $reverse);
      $queries[$response->query]['traceroute_max'] = (count($forward) > count($reverse)) ? count($forward) : count($reverse);
    }
    elseif (!empty($queries[$response->query]['forward'])) {
      $diff = array();
      $forward = array_shift(array_values($queries[$response->query]['forward']));
      foreach ($forward as $row) {
        $diff[] = array('match' => array('forward' => $row));
      }
      $queries[$response->query]['diff'] = $diff;
    }
  }
  return $queries[$response->query];
}

/**
 * Implementation of hook_ctools_plugin_api().
 * Required to provide layers
 */
function ecenter_weathermap_ctools_plugin_api($module, $api) {
  if ($module == "openlayers") {
    switch ($api) {
      case 'openlayers_layers':
      case 'openlayers_styles':
      case 'openlayers_presets':
        return array('version' => 1);
    }
  }
}

