  if ($src && $dst && $start && $end) {

    $data = ecenter_network_get_data($src, $dst, $start, $end);

    if ($data && $traceroute = $data['traceroute']['forward']) {

      // Initialize some counters, etc
      $old_hop = NULL;
      $count = count($traceroute);
