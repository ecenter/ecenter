  $raw_data = ecenter_network_get_recent_scv_results($src, 3600);
  $circuit_data = ecenter_network_get_circuit_data($src, NULL, $start, $end);

  $site_data = array('source' => $raw_data['data']['source'], 'destinations' => array());

  $ip_headers = array('hub' => t('Hub'));
  $ip_rows = array();

  $tests = array(
    'bwctl' => array('throughput'),
    'owamp' => array('max_delay', 'sent', 'min_delay', 'loss'),
    // @TODO Pinger? Other values
  );

  foreach ($raw_data['data']['destinations'] as $hub => $data) {
    $site_data['destinations'][] = array(
      'hub' => $hub,
      'data' => $data,
      'markup' => theme('ecenter_network_site_centric_data', $data),
    );

    $row = array('hub' => array(
      'data' => $hub,
      'header' => TRUE,
    ));

    // @TODO Incorporate measurement API
    foreach ($tests as $test => $measurements) {
      foreach ($measurements as $measurement) {

        $value_suggestions = array(
          'ecenter_network_format_'. $test .'_'. $measurement,
          'ecenter_network_format_'. $test,
          'ecenter_network_format_default',
        );
        $label_suggestions = array(
          'ecenter_network_format_'. $test .'_'. $measurement .'_label',
          'ecenter_network_format_'. $test .'_label',
          'ecenter_network_format_default_label',
        );

        $key = $test .'_'. $measurement;
        if (empty($ip_headers[$key])) {
          $ip_headers[$key] = theme($label_suggestions, $measurement, $test);
        }
        $row[$key] = array();
        if (!empty($data['e2e'][$test][$measurement])) {
          $row[$key] = array(
            'data' => theme($value_suggestions, $data['e2e'][$test][$measurement], $test, $measurement, TRUE),
            'class' => $key,
          );
        }
        else {
          $row[$key] = array(
            'data' => t('Not available'),
            'class' => 'no-data',
          );
        }
      }
    }
    $ip_rows[$hub] = $row;
  }
  
  ksort($ip_rows);

  drupal_add_js(array('ecenterNetwork' => array('siteData' => $site_data)),
    'setting');

  $form['site_view'] = array(
