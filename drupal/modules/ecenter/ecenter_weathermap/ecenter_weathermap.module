/**
 * Primary selection form.
 *
 * The basic form is defined in another constructor function.  This function
 * primarily processes the form.
 */
function ecenter_weathermap_select_form(&$form_state) {
  // Base form
  $form = _ecenter_weathermap_select_form();

  // Services client
  $client = ecenter_weathermap_get_client();

  // Always get source hubs
  $src_hops = $client->getHubs();
  $src_options = array('' => 'Select a source');
  foreach ($src_hops['response'] as $hop) {
    $src_options[$hop->ip_noted] = theme('ecenter_weathermap_hop_option', $hop);
  }
  $form['src_ip']['#options'] += $src_options;
 
  // Populate destination values
  if (!empty($form_state['values']['src_ip'])) {
    $form['src_ip']['#default_value'] = $form_state['values']['src_ip'];

    $dst_hops = $client->getHubs($form_state['values']['src_ip']);
    $dst_options = array('' => 'Select a source');
    foreach ($dst_hops['response'] as $hop) {
      $dst_options[$hop->ip_noted] = theme('ecenter_weathermap_hop_option', $hop);
    }
    $form['dst_ip']['#options'] += $dst_options;
    $form['dst_ip']['#disabled'] = FALSE;
    $form['dst_ip']['#required'] = TRUE;
  }

  if (!empty($form_state['values']['dst_ip'])) {
    $form['dst_ip']['#default_value'] = $form_state['values']['dst_ip'];
    $form['test'] = array('#value' => '<p>HI!</p>');
  }
  //print '<pre> form state incoming: '. print_r($form_state, TRUE) .'</pre>';
  //$form['#submit'][] = '_ecenter_weathermap_select_form_submit';
  return $form;
}


