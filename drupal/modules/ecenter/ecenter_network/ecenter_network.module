  if (!empty($src) && !empty($dst) && !empty($start) && !empty($end)) {

    $data = ecenter_network_get_data($src, $dst, $start, $end);

    $direction = (!empty($data['traceroute']['forward'])) ? 'forward' : 'reverse';

    if ($data && !empty($data['traceroute'][$direction])) {

