/**
 * Primary selection form.
 *
 * The basic form is defined in _ecenter_weathermap_select_form. This function
 * primarily processes the form.
 */
function ecenter_weathermap_select_form(&$form_state) {
  $client = ecenter_weathermap_get_client();

  // Check if something is wrong and bail before doing anything else.
  if (!$client->checkStatus()) {
    watchdog('ecenter', 'E-Center web service was not available.', array(), WATCHDOG_ERROR);
    return array(
      'error' => array(
        '#value' => '<p class="error">'. t('The E-Center data service is currently experiencing difficulties. Please check back shortly.') .'</p>',
      ),
    );
  }

  // Get base form and register with ahah_helper
  $form = _ecenter_weathermap_select_form();
  ahah_helper_register($form, $form_state);

  // Get query string or POSTed (manually or via AJAX) values.
  // Form values "beat" query string values
  $src_ip = (!empty($form_state['storage']['src_ip_wrapper']['src_ip'])) ?
    $form_state['storage']['src_ip_wrapper']['src_ip'] : $_REQUEST['src_ip'];

  $dst_ip = (!empty($form_state['storage']['dst_ip_wrapper']['dst_ip'])) ?
    $form_state['storage']['dst_ip_wrapper']['dst_ip'] : $_REQUEST['dst_ip'];

  $start_date = (!empty($form_state['storage']['date_wrapper']['start_date'])) ?
    $form_state['storage']['date_wrapper']['start_date']['date'] .' '. $form_state['storage']['date_wrapper']['start_date']['time'] : $_REQUEST['start_date'];

  $end_date = (!empty($form_state['storage']['date_wrapper']['end_date'])) ?
    $form_state['storage']['date_wrapper']['end_date']['date'] .' '. $form_state['storage']['date_wrapper']['end_date']['time'] : $_REQUEST['end_date'];


  // Set sane values for start / end by converting and rounding
  $inc = variable_get('ecenter_weathermap_time_increment', 5);
  $unix_inc = 60 * $inc;
  $end = (!empty($end_date)) ? strtotime($end_date) : time();
  $end = $end - $end % $unix_inc;
  $start = (!empty($start_date)) ? strtotime($start_date) : $end - variable_get('ecenter_weathermap_time_window', 3600);
  $start = $start - $start % $unix_inc;


  $form['date_wrapper']['start_date']['#default_value'] = format_date($start, 'custom', 'Y-M-d g:i');
  $form['date_wrapper']['end_date']['#default_value'] = format_date($end, 'custom', 'Y-M-d g:i');

  // Always get source hubs
  $src_hops = $client->getHubs();
  $src_options = array('' => t('Select a source'));
  foreach ($src_hops['response'] as $hop) {
    $src_options[$hop->ip_noted] = theme('ecenter_weathermap_hop_option', $hop);
  }
  $form['src_ip_wrapper']['src_ip']['#options'] = $src_options;

  // Get allowed destinations for a given source IP
  if ($src_ip) {
    if (array_key_exists($src_ip, $form['src_ip_wrapper']['src_ip']['#options'])) {
      $form['src_ip_wrapper']['src_ip']['#default_value'] = $src_ip;
    }
    else {
      unset($src_ip);
    }

    $dst_hops = $client->getHubs($form_state['storage']['src_ip_wrapper']['src_ip']);
    $dst_options = array('' => t('Select a destination'));
    foreach ($dst_hops['response'] as $hop) {
      $dst_options[$hop->ip_noted] = theme('ecenter_weathermap_hop_option', $hop);
    }

    $form['dst_ip_wrapper']['dst_ip']['#options'] += $dst_options;
    $form['dst_ip_wrapper']['dst_ip']['#disabled'] = FALSE;
    $form['dst_ip_wrapper']['dst_ip']['#required'] = TRUE;


  }

  // See if provided destination is actually allowed
  if ($src_ip && $dst_ip) {
    if (array_key_exists($dst_ip, $form['dst_ip_wrapper']['dst_ip']['#options'])) {
      $form['dst_ip_wrapper']['dst_ip']['#default_value'] = $dst_ip;
    }
    else {
      unset($dst_ip);
    }
  }

  if ($src_ip && $dst_ip && $start_date && $end_date) {
    $data = $client->getData($src_ip, $dst_ip, $start_date .':00', $end_date .':00');

    $query_params = array(
      'src_ip' => $src_ip,
      'dst_ip' => $dst_ip,
      'start_date' => $start_date,
      'end_date' => $end_date
    );
    $query = http_build_query($query_params);

    // If we've got the data, delegate to rendering functions...
    if ($data['code'] == 200 && !empty($data['response'])) {
      $permalink = l(t('Permalink'), 'weathermap', array('query' => $query_params));
      //dpm($data); // @TODO... RENDER!!!
      $form['data_wrapper']['data']['#value'] = theme('ecenter_weathermap_data', $data);
    }
    else {
      watchdog('ecenter', 'Query returned no results: <code>@query</code>', array('@query' => $query), WATCHDOG_INFO);
      $form['data_wrapper']['data']['#value'] = '<p>'. t('Whoops! No data was available for this query. If you believe there should be data for this query, send the site administrator feedback along with executed query, provided below:') .'</p>';
      $form['data_wrapper']['data']['#value'] .= '<pre>'. $query .'</pre>';
      $form['data_wrapper']['data']['#value'] .= '<p>'. l(t('Permalink'), 'weathermap', array('query' => $query_params)) .'</p>';
    }
  }
  return $form;
}

